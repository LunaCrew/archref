{
  "name": "archref",
  "version": "1.0.0",
  "description": "Reference Architecture for LunaCrew's NodeJS projects",
  "main": "src/app.ts",
  "_moduleAliases": {
    "src": "./build/src/"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts",
    "start": "node build/src/app.js",
    "lint": "npx eslint . --fix",
    "test": "npm run test:coverage",
    "test:unit": "jest --verbose ./test",
    "test:coverage": "jest --verbose ./test --coverage",
    "dependencies:reset": "rm -rf node_modules && rm package-lock.json && npm install",
    "dependencies:fix": "node scripts/fixDependencies.js",
    "clear:build": "rm -rf build",
    "clear:coverage": "rm -rf coverage",
    "prepare": "husky install",
    "help": "node scripts/help.js"
  },
  "author": "Ash Trindade",
  "license": "All rights reserved",
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/module-alias": "2.0.4",
    "@types/node": "20.12.2",
    "@types/supertest": "2.0.16",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "eslint": "8.57.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "nodemon": "3.1.0",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.3"
  },
  "dependencies": {
    "@ashtrindade/logger": "2.0.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "joi": "17.12.0",
    "mongodb": "6.5.0",
    "swagger-ui-express": "5.0.0",
    "uuidv4": "6.2.13"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts, .js",
    "ignore": []
  }
}